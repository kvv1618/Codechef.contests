#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--)
	{
	    int n;
	    cin>>n;
	    int a[n];
	    for(int i=0;i<n;i++)
	    {
	        cin>>a[i];
	    }
	    long long int sum=0;
	    for(int i=0;i<n-1;i++)
	    {
	        sum+=abs(a[i]-a[i+1])-1;
	    }
	    cout<<sum<<endl;
	}
	return 0;
}
