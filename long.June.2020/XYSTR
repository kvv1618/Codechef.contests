#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--)
	{
	    string s;
	    cin>>s;
	    int n=s.size();
	        int c=0,i=0;
	        while(i<n-1)
	        {
	            if(s[i]!=s[i+1])
	            {
	                c++;
	                i+=2;
	            }
	            else
	            {
	                i+=1;
	            }
	        }
	    cout<<c<<endl;
	}
	return 0;
}

